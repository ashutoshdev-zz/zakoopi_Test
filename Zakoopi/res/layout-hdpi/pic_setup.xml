<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/rel_con"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#27B3AD" >

            <TextView
                android:id="@+id/txt_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="Choose Option"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_btn_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rel_con" >

            <TextView
                android:id="@+id/txt_img_from_gal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Image from Gallery"
                android:textColor="#26B3AD"
                android:background="#FFFFFF"
                android:textSize="18dp" />
        </RelativeLayout>
        
        <View 
            android:id="@+id/vi"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            android:layout_below="@+id/rel_btn_1"/>
        
        <RelativeLayout
            android:id="@+id/rel_btn_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/vi" >

            <TextView
                android:id="@+id/txt_img_from_cam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Image from Camera"
                android:textColor="#26B3AD"
                android:background="#FFFFFF"
                android:textSize="18dp" />
        </RelativeLayout>

       
    </RelativeLayout>

</RelativeLayout>