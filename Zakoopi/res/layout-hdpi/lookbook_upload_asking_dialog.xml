<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rerl"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:background="#ffffff" >
       

        <RelativeLayout
            android:id="@+id/rel_upload1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/lin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:layout_weight="1"
            android:background="@drawable/upload_another_drawable" >

            <TextView
                android:id="@+id/txt_upload1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tag a Store to Continue"
                android:textColor="#FFFFFF"
                android:textSize="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_upload"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/rel_upload1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/go_home_drawable" >

            <TextView
                android:id="@+id/txt_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Save as Draft"
                android:textColor="#27B3AD"
                android:textSize="15dp"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>