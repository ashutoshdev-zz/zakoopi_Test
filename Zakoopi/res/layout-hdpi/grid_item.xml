<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:feedpage="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.zakoopi"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="fill_parent"
        android:layout_height="47.67dp" >

        <com.zakoopi.roundimagelib.SelectableRoundedImageView
            android:id="@+id/img_background"
            android:layout_width="fill_parent"
            android:layout_height="47.67dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/zakoopiicon"
            app:sriv_left_bottom_corner_radius="8dp"
            app:sriv_left_top_corner_radius="8dp"
            app:sriv_right_bottom_corner_radius="8dp"
            app:sriv_right_top_corner_radius="8dp" />
        

        <com.zakoopi.helper.MyTextViewFont
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10.67dp"
            android:layout_marginLeft="10.67dp"
            android:layout_marginRight="10dp"
            android:text="Hello"
            android:textColor="#FFF"
            android:textSize="13dp"
            feedpage:fontName="SourceSansPro-Semibold.ttf" />
    </RelativeLayout>

</RelativeLayout>