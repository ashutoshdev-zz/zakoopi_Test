<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rel_user"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#26B3AD" >

        <com.zakoopi.helper.CircleImageView
            android:id="@+id/img_user_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
             />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_user_profile"
            android:text="Zakoopi User"
            android:textColor="#FFFFFF"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_lookbook_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_user"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="15 stores you "
            android:textColor="#323232"
            android:textSize="16.33dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_view_like_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_lookbook_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >
        
       <!--  <LinearLayout 
            android:id="@+id/lin_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"> -->
        
        <LinearLayout
            android:id="@+id/social_lin_view_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            
            <RelativeLayout 
                android:id="@+id/rel_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            
            <ImageView
            android:id="@+id/img_view"
            android:layout_width="36.67dp"
            android:layout_height="21.33dp"
            android:background="@drawable/home_view_icon" />
            
            <TextView
                android:id="@+id/txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_view"
                android:text="999"
                android:layout_marginLeft="10dp"
                android:textColor="#898989"
                android:textSize="13dp" />
            
            </RelativeLayout>
            
             <RelativeLayout 
                android:id="@+id/rel_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">
            
            
             <ImageView
            android:id="@+id/img_like"
            android:layout_width="26.67dp"
            android:layout_height="23.33dp" 
            android:background="@drawable/notif_like" />
             
              <TextView
                  android:id="@+id/txt_like"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:layout_toRightOf="@+id/img_like"
                  android:text="1"
                  android:textColor="#898989"
                  android:textSize="13dp" />

              </RelativeLayout>
              
             <RelativeLayout 
                android:id="@+id/rel_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">
             
              <ImageView
            android:id="@+id/img_comment"
            android:layout_width="25.67dp"
            android:layout_height="21.67dp"
            android:background="@drawable/notif_comment" />
              
              <TextView
                  android:id="@+id/txt_comment"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:layout_toRightOf="@+id/img_comment"
                  android:text="999"
                  android:textColor="#898989"
                  android:textSize="13dp" />
              
              </RelativeLayout>
        </LinearLayout>
        
        <!-- <LinearLayout
            android:id="@+id/social_lin_view_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="3" >
            
            

           

            
            
        </LinearLayout> -->
      <!--   </LinearLayout> -->
     
    </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/rel_view_like_comment"
        android:background="@android:color/transparent" />

</RelativeLayout>