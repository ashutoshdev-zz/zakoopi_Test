<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <RelativeLayout
        android:id="@+id/rel_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rel_header"
            android:layout_width="fill_parent"
            android:layout_height="46.00dp"
            android:background="#000000" >

            <RelativeLayout
                android:id="@+id/rel_back"
                android:layout_width="wrap_content"
                android:layout_height="46.00dp" >

                <RelativeLayout
                    android:id="@+id/rel_back_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp" >

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="6.67dp"
                        android:layout_height="12.67dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/home_back" />

                    <TextView
                        android:id="@+id/txt_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9.00dp"
                        android:layout_toRightOf="@+id/img_back"
                        android:text="Back"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_submit"
                android:layout_width="76.67dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="#26B3AD" >

                <TextView
                    android:id="@+id/txt_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Submit"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_main_profile_pic"
            android:layout_width="fill_parent"
            android:layout_height="100.00dp"
            android:layout_below="@+id/rel_header"
            android:background="#FFF" >

            <RelativeLayout
                android:id="@+id/rel_pro"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10.67dp"
                android:layout_marginLeft="10.67dp"
                android:layout_marginTop="21.67dp" >

                <com.zakoopi.helper.CircleImageView
                    android:id="@+id/img_profile_pic"
                    android:layout_width="67.33dp"
                    android:layout_height="67.33dp"
                    android:background="@drawable/home_profile_pic" />

                <ImageView
                    android:id="@+id/img_change_pic"
                    android:layout_width="106.67dp"
                    android:layout_height="26.00dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12.67dp"
                    android:layout_toRightOf="@+id/img_profile_pic"
                    android:background="@drawable/edit_changepic" />

             
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="fill_parent"
            android:layout_height="0.33dp"
            android:layout_below="@+id/rel_main_profile_pic"
            android:background="#d2d2d2" />

        <RelativeLayout
            android:id="@+id/rel_main_user_name"
            android:layout_width="fill_parent"
            android:layout_height="38.67dp"
            android:layout_below="@+id/v1"
            android:background="#FFF" >

            <RelativeLayout
                android:id="@+id/rel_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10.67dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11.00dp" >

                <ImageView
                    android:id="@+id/img_user_icon"
                    android:layout_width="16dp"
                    android:layout_height="17.00dp"
                    android:background="@drawable/edit_name_icon" />

                <EditText
                    android:id="@+id/txt_user_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_user_icon"
                    android:background="@android:color/transparent"
                    android:cursorVisible="false"
                    android:hint="User Name"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="#4d4d49"
                    android:textSize="15dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v2"
            android:layout_width="fill_parent"
            android:layout_height="0.33dp"
            android:layout_below="@+id/rel_main_user_name"
            android:background="#d2d2d2" />

        <RelativeLayout
            android:id="@+id/rel_main_location_name"
            android:layout_width="fill_parent"
            android:layout_height="38.67dp"
            android:layout_below="@+id/v2"
            android:background="#FFF" >

            <RelativeLayout
                android:id="@+id/rel_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10.67dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11.00dp" >

                <ImageView
                    android:id="@+id/img_location_icon"
                    android:layout_width="12dp"
                    android:layout_height="17.33dp"
                    android:background="@drawable/edit_location_icon" />

                <EditText
                    android:id="@+id/txt_location_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_location_icon"
                    android:background="@android:color/transparent"
                    android:hint="Location"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="#4d4d49"
                    android:textSize="15dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v3"
            android:layout_width="fill_parent"
            android:layout_height="0.33dp"
            android:layout_below="@+id/rel_main_location_name"
            android:background="#d2d2d2" />

        <!-- AGE -->

        <RelativeLayout
            android:id="@+id/rel_age"
            android:layout_width="fill_parent"
            android:layout_height="38.67dp"
            android:layout_below="@+id/v3"
            android:background="#FFF" >

            <RelativeLayout
                android:id="@+id/rel_age_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10.67dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11.00dp" >

                <ImageView
                    android:id="@+id/img_age_icon"
                    android:layout_width="16dp"
                    android:layout_height="17.00dp"
                    android:background="@drawable/edit_name_icon" />

                <EditText
                    android:id="@+id/txt_age"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_age_icon"
                    android:background="@android:color/transparent"
                    android:hint="Age"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="#4d4d49"
                    android:textSize="15dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v4"
            android:layout_width="fill_parent"
            android:layout_height="0.33dp"
            android:layout_below="@+id/rel_age"
            android:background="#d2d2d2" />

        <!-- Gender -->

        <RelativeLayout
            android:id="@+id/rel_gender"
            android:layout_width="fill_parent"
            android:layout_height="38.67dp"
            android:layout_below="@+id/v4"
            android:background="#FFF" >

            <RelativeLayout
                android:id="@+id/rel_gender_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10.67dp"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/img_gender_icon"
                    android:layout_width="16dp"
                    android:layout_height="17.00dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_name_icon" />

                <RadioGroup
                    android:id="@+id/radioSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/img_gender_icon"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Male"
                        android:textColor="#4d4d49"
                        android:textSize="13dp" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Female"
                        android:textColor="#4d4d49"
                        android:textSize="13dp" />
                </RadioGroup>



                <!-- <EditText
                    android:id="@+id/txt_gender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_gender_icon"
                    android:background="@android:color/transparent"
                    android:hint="Gender"
                    android:singleLine="true"
                    android:textColor="#4d4d49"
                    android:textSize="15dp" />   -->

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v5"
            android:layout_width="fill_parent"
            android:layout_height="0.33dp"
            android:layout_below="@+id/rel_gender"
            android:background="#d2d2d2" />

        <!-- YourSelf -->

        <RelativeLayout
            android:id="@+id/rel_main_yourself"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v5"
            android:background="#FFF" >

            <RelativeLayout
                android:id="@+id/rel_yourself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10.67dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11.00dp" >

                <ImageView
                    android:id="@+id/img_yourself_icon"
                    android:layout_width="16.67dp"
                    android:layout_height="16.67dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_about_icon" />

                <EditText
                    android:id="@+id/edt_yourself"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/img_yourself_icon"
                    android:background="@android:color/transparent"
                    android:hint="Write about yourself with in 140 characters..."
                    android:maxLength="140"
                    android:textColor="#898989"
                    android:textSize="15dp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rel_main_yourself"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="0/140"
            android:textColor="#4d4d49"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>